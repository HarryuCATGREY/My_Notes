<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width = "match_parent"
    android:orientation = "vertical"
    android:layout_height = "match_parent">

    <TextView
        android:id="@+id/forget_title"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        android:textStyle="bold"
        android:textSize="35sp"
        android:textColor="@color/black"
        android:text="Reset Password"
        android:fontFamily="@font/opensans_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:gravity="left"
        android:text="Let's recover your password"
        android:fontFamily="@font/opensans_regular"
        android:textColor="@color/theme_blue"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <EditText
            android:id="@+id/forget_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/email"
            android:hint="Email"
            android:singleLine="true"
            android:paddingStart="17dp"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textStyle="normal"
            android:fontFamily="@font/opensans_regular"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <EditText
            android:id="@+id/forget_verify"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/email"
            android:hint="Verify code"
            android:inputType="textPassword"
            android:singleLine="true"
            android:paddingStart="17dp"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textStyle="normal"
            android:fontFamily="@font/opensans_regular"/>
    </LinearLayout>


    <Button
        android:id="@+id/recover_button"
        android:layout_marginTop="20dp"
        android:text="Continue"
        android:textSize="13sp"
        android:background="@drawable/gradient"
        app:backgroundTint="@null"
        android:src="@drawable/gradient"
        android:fontFamily="@font/opensans_regular"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/backlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:gravity="right"
        android:fontFamily="@font/opensans_regular"
        android:text="Go back to Login"
        android:textColor="#2E94F7"
        android:textSize="13sp"/>

</LinearLayout>